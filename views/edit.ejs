<% include _header %>
<div class="container">
    <div class="col-md-12">  
        <% 
        if(!(typeof (msg) == 'undefined')){
    %>
            <div role="alert" class="alert alert-success">
                <%= msg %>
            </div> 
    <% 
        }
    %>  
        <form action="/zombies/edit/<%= zombie.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="">Nombre</label>
                <input type="text" class="form-control" name="name" value="<%= zombie.name %>">
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input type="email" class="form-control" name="email" value="<%= zombie.email %>">
            </div>
            <div class="form-group">
                <label for="">Tipo</label>
                <input type="text" class="form-control" name="type" value="<%= zombie.type %>">
            </div>   
            <%
            if(!(typeof (mensajeError) == 'undefined')){
            %>
                <div role="alert" class="alert alert-danger">
                    <%= mensajeError %>
                </div>
                <% 
            }
            %>
            <button class="btn btn-primary"><i class="fas fa-edit"></i> Actualizar Zombie</button>
        </form>
    </div>
</div>

<% include _footer %>